<div class="container p-6 mx-auto">
  <h1 class="mb-4 text-3xl font-bold text-gray-800">Accounts</h1>
  <table class="min-w-full bg-white border border-gray-200">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2 border-b">Name</th>
        <th class="px-4 py-2 border-b">Supplier</th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td class="px-4 py-2 border-b"><%= account.name %></td>
          <td class="px-4 py-2 border-b"><%= account.supplier.name if account.supplier %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
