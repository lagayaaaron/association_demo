<div class="container p-6 mx-auto">
  <h1 class="mb-4 text-3xl font-bold text-gray-800">Users</h1>
  <table class="min-w-full bg-white border border-gray-200">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2 border-b">Name</th>
        <th class="px-4 py-2 border-b">Profile</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="px-4 py-2 border-b"><%= user.name %></td>
          <td class="px-4 py-2 border-b"><%= user.profile ? user.profile.bio : "No profile" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
