<div class="container p-6 mx-auto">
  <h1 class="mb-8 text-4xl font-bold text-center text-gray-800">Rails Association Demo App</h1>

  <section class="mb-8">
    <h2 class="mb-4 text-2xl font-semibold text-gray-700">Authors and Books</h2>
    <ul class="space-y-4">
      <% @authors.each do |author| %>
        <li>
          <div class="text-lg font-bold text-blue-700"><%= author.name %></div>
          <ul class="mt-2 ml-4 space-y-2">
            <% author.books.each do |book| %>
              <li><%= link_to book.title, book_path(book), class: "text-blue-500 hover:underline" %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
    <%= link_to 'View All Authors', authors_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </section>

  <section class="mb-8">
    <h2 class="mb-4 text-2xl font-semibold text-gray-700">Users and Profiles</h2>
    <ul class="space-y-4">
      <% @users.each do |user| %>
        <li>
          <span class="font-bold text-gray-800"><%= user.name %></span> - 
          Profile: <%= user.profile ? user.profile.bio : "No profile" %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'View All Users', users_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </section>

  <section class="mb-8">
    <h2 class="mb-4 text-2xl font-semibold text-gray-700">Doctors and Patients</h2>
    <ul class="space-y-4">
      <% @doctors.each do |doctor| %>
        <li>
          <div class="text-lg font-bold text-blue-700"><%= doctor.name %></div>
          <ul class="mt-2 ml-4 space-y-2">
            <% doctor.patients.each do |patient| %>
              <li><%= link_to patient.name, patient_path(patient), class: "text-blue-500 hover:underline" %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
    <%= link_to 'View All Doctors', doctors_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </section>

  <section class="mb-8">
    <h2 class="mb-4 text-2xl font-semibold text-gray-700">Physicians and Appointments</h2>
    <ul class="space-y-4">
      <% @physicians.each do |physician| %>
        <li>
          <div class="text-lg font-bold text-blue-700"><%= physician.name %></div>
          <ul class="mt-2 ml-4 space-y-2">
            <% physician.appointments.each do |appointment| %>
              <li>
                Appointment with <%= appointment.patient.name %> on <%= appointment.appointment_date %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
    <%= link_to 'View All Physicians', physicians_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </section>

  <section class="mt-2 mb-8">
    <h2 class="mb-4 text-2xl font-semibold text-gray-700">Suppliers and Accounts</h2>
    <ul class="space-y-4">
      <% @suppliers.each do |supplier| %>
        <li>
          <div class="text-lg font-bold text-blue-700"><%= supplier.name %></div>
          Account Number: <%= supplier.account&.account_number || "No Account" %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'View All Suppliers', suppliers_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </section>
</div>
