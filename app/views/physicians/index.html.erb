<div class="container p-6 mx-auto">
  <h1 class="mb-4 text-3xl font-bold text-gray-800">Physicians</h1>
  <table class="min-w-full bg-white border border-gray-200">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2 border-b">Name</th>
        <th class="px-4 py-2 border-b">Appointments</th>
      </tr>
    </thead>
    <tbody>
      <% @physicians.each do |physician| %>
        <tr>
          <td class="px-4 py-2 border-b"><%= physician.name %></td>
          <td class="px-4 py-2 border-b">
            <ul>
              <% physician.appointments.each do |appointment| %>
                <li>
                  Appointment with <%= appointment.patient.name %> on <%= appointment.appointment_date&.strftime("%B %d, %Y at %I:%M %p") || "" %>
                </li>
              <% end %>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
