<div class="container p-6 mx-auto">
  <h1 class="mb-4 text-3xl font-bold text-gray-800">Appointments</h1>
  <table class="min-w-full bg-white border border-gray-200">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2 border-b">Patient</th>
        <th class="px-4 py-2 border-b">Physician</th>
        <th class="px-4 py-2 border-b">Appointment Date</th>
      </tr>
    </thead>
    <tbody>
      <% @appointments.each do |appointment| %>
        <tr>
          <td class="px-4 py-2 border-b"><%= appointment.patient.name %></td>
          <td class="px-4 py-2 border-b"><%= appointment.physician.name %></td>
          <td class="px-4 py-2 border-b"><%= appointment.appointment_date&.strftime("%B %d, %Y at %I:%M %p") || "" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>